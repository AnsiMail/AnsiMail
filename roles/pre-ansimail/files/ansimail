#!/bin/sh

if [ $(id -u) -ne 0 ]; then
	echo "This can only be run by root"
	exit 1
fi

if [ $# -lt 1 ]; then
	echo "Error: AnsiMail called with no arguments"
	exit 1
fi

case "$1" in
	"ensure-dkim")
		/bin/sh /usr/local/lib/ansimail/ensure-dkim $2;;
	"renew-certs")
		/bin/sh /usr/local/lib/ansimail/renew-certs $2;;
	"show-stats")
		/bin/sh /usr/local/lib/ansimail/show-stats $2;;
	"add-alias")
		/bin/sh /usr/local/lib/ansimail/add-alias $2;;
	"add-user")
		/bin/sh /usr/local/lib/ansimail/add-user $2;;
	"change-passwd")
		/bin/sh /usr/local/lib/ansimail/change-passwd $2;;
	"daily-report")
		/bin/sh /usr/local/lib/ansimail/daily-report $2;;
	"userdb-check")
		/bin/sh /usr/local/lib/ansimail/userdb-check $2;;
	"fix-perms")
		/bin/sh /usr/local/lib/ansimail/fix-perms $2;;
	*)
		echo "Unknow argument"
		exit 1;;
esac
